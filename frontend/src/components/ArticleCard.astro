---
const { article } = Astro.props;
---

<article class="card">
  {article.image && 
    <img 
      src={`http://localhost:8000${article.image}`} 
      alt={article.title}
      loading="lazy"
    />
  }
  <div class="content">
    <span class="date">{new Date(article.created_at).toLocaleDateString()}</span>
    <h3>{article.title}</h3>
    <p>{article.desc}</p>
    <div class="tags">
      {article.tags.split(',').map(tag => (
        <span class="tag">{tag.trim()}</span>
      ))}
    </div>
  </div>
</article>

<style>
  .card {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-5px);
  }
  
  .card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .content {
    padding: 1rem;
  }
  
  .date {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }
  
  .tags {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  
  .tag {
    background: var(--tag-bg);
    color: var(--tag-text);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }
</style>