---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const { id } = Astro.params;
const response = await fetch(`http://localhost:8000/api/articles/${id}/`);
const article = await response.json();
---

<BaseLayout title={`${article.title} | Музыкальный сервис`}>
  <article class="article">
    <header>
      <h1>{article.title}</h1>
      <div class="meta">
        <span>{new Date(article.created_at).toLocaleDateString()}</span>
        <span>Автор: {article.author.username}</span>
      </div>
      {article.image && 
        <img 
          src={`http://localhost:8000${article.image}`} 
          alt={article.title}
        />
      }
    </header>
    
    <div class="content">
      {article.content}
    </div>
    
    <div class="tags">
      {article.tags.split(',').map(tag => (
        <span class="tag">{tag.trim()}</span>
      ))}
    </div>
  </article>
</BaseLayout>

<style>
  .article {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .article img {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    margin: 1rem 0;
    border-radius: 8px;
  }
  
  .meta {
    display: flex;
    gap: 1rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }
  
  .content {
    line-height: 1.6;
    margin: 2rem 0;
  }
  
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
</style>